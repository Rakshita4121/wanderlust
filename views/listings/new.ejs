<% layout("layouts/boilerplate.ejs") %>
<body>
    <div class="row">
        <div class="col-8 offset-2">
            <h3 class="mt-3">Create a New Listing</h3>
            <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label form-font">Title</label>
            <input name="listing[title]" placeholder="enter title" type="text" id="title" class="form-control input-border" required>
            <div class="invalid-feedback">
                Please enter the title.
              </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label form-font">Description</label>
            <textarea name="listing[description]" placeholder="enter description" class="form-control input-border" id="description" required></textarea>
            <div class="invalid-feedback">
                Please enter a short description.
              </div>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label form-font">Upload Image</label>
            <input name="listing[image]" placeholder="enter image URL/link" type="file" class="form-control input-border" id="image" required>
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label form-font">Price</label>
                <input name="listing[price]" placeholder="enter price"  id="price" class="form-control input-border" required>
                <div class="invalid-feedback">
                    Price should be valid.
                  </div>
            </div>
           <div class="mb-3 col-md-8">
               <label for="location" class="form-label form-font">Location</label>
               <input name="listing[location]" placeholder="enter location" class="form-control input-border" type="text" id="location" required>
                <div class="invalid-feedback">
                Country name should be valid.
              </div>
           </div>
        </div>
        
        <div class="mb-3">
            <label for="country" class="form-label form-font">Country</label>
            <input name="listing[country]" placeholder="enter country" type="text" class="form-control input-border" id="country" required>
            <div class="invalid-feedback">
                Location should be valid.
              </div>
        </div>
      
        <button class="btn btn-secondary add-btn mb-3">Add</button>
    </form>
        </div>
        
    </div>
    
</body>